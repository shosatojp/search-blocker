{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "module": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
        ],
        "target": "ES2020",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "Node",
        "outDir": "dist",
        "jsx": "react",
    },
    "include": [
        "src/",
        "chrome/",
    ],
}
